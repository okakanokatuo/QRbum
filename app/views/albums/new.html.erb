<meta name="viewport" content="width=device-width,initial-scale=1">
</head>

<body>
    <%= stylesheet_link_tag "albums.new", :media => "all" %>

    <div class="first-block">
        <%= image_tag"hpb1.png", alt:"", class:"hpb" %>

        <div class="album">
            <%= form_for @album do |f| %>
                <div class="field">
                    <%= f.label :image %>
                    <%= f.file_field :image %>
                </div>
                <div class="field">
                    <%= f.label :body %>
                    <%= f.text_area :body, :size => 140*2 %>
                </div>
                <%= f.submit "確定" %>
            <% end %>
            <br><%= link_to "テンプレ一覧へ", '/albums' %>
        </div>
    </div>
</body>